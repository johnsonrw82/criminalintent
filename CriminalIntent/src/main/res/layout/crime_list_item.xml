<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_activated">

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/crime_list_item_solvedCheckBox" android:enabled="false"
            android:layout_alignParentRight="true"
            android:padding="4dp"
            android:focusable="false"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/crime_list_item_crimeTitle"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/crime_list_item_solvedCheckBox"
            android:textStyle="bold"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/crime_list_item_crimeDate"
            android:layout_below="@id/crime_list_item_crimeTitle" android:layout_toLeftOf="@id/crime_list_item_solvedCheckBox"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"/>
</RelativeLayout>